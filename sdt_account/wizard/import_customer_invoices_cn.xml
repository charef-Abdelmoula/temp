<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_import_customer_invoices_cn_form" model="ir.ui.view">
        <field name="name">import.customer.invoices.cn.form</field>
        <field name="model">import.customer.invoices.cn</field>
        <field name="arch" type="xml">
            <form string="Import Bill and Refunds">
                <group>
                     <div invisible="import_warning != False" class="oe_grey" colspan="4">
                        A Valid file will contains following headers.
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th class="text-right"><span>Dagboek (1)</span></th>
                                    <th class="text-right"><span>Documentnummer (2)</span></th>
                                    <th class="text-right"><span>Documentdatum</span></th>
                                    <th class="text-right"><span>Nummer leverancier</span></th>
                                    <th class="text-right"><span>Firmanaam</span></th>
                                    <th class="text-right"><span>Firmanaam2</span></th>
                                    <th class="text-right"><span>Opmerking</span></th>
                                    <th class="text-right"><span>Totaal bedrag-BTW documentmunt</span></th>
                                    <th class="text-right"><span>Totaal bedrag documentmunt</span></th>
                                    <th class="text-right"><span>Vervaldatum</span></th>
                                </tr>
                            </thead>
                        </table>
                     </div>
                </group>
                <group>
                    <field name="company_id" required="1" invisible="import_warning != False"/>
                    <field name="product_id" required="1" invisible="import_warning != False"/>
                    <field name="journal_id" required="1" invisible="import_warning != False"/>
                    <field name="venice_system" required="1" invisible="import_warning != False"/>
                    <field name="file" required="1" invisible="import_warning != False"/>
                    <field name="import_warning" readonly="1" invisible="import_warning == False"/>
                </group>
                <footer>
                    <button name="do_import_customer_invoices" string="Import Invoices (xls)" class="oe_highlight" type="object" invisible="import_warning != False"/>
                    <button name="cancel" special="cancel" string="Close" class="oe_link" invisible="import_warning == False"/>
                    or
                    <button name="cancel" special="cancel" string="Cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_import_customer_invoices_cn" model="ir.actions.act_window">
        <field name="name">Import Invoices and Credit Notes</field>
        <field name="res_model">import.customer.invoices.cn</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{}</field>
    </record>



</odoo>